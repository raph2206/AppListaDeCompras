<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMercadin.AbrirTarefa"
             Padding="10">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Código:" />
            <Label x:Name="lbl_id" Text="{ Binding Id }" />

            <Label Text="Produto" />
            <Entry x:Name="txt_produto" Text="{ Binding Produto }"  />

            <Label Text="Preço" />
            <Entry x:Name="txt_preco" Text="{ Binding Preco }" />

            <Label Text="Data Criação" />
            <DatePicker x:Name="dtpck_data_criacao" Date="{ Binding Data_Criacao }" />

            <Label Text="Data Conclusão" />
            <DatePicker x:Name="dtpck_data_conclusao" Date="{ Binding Data_Conclusao }" />

            <Button Text="Salvar" Clicked="Button_Clicked"/>

            <Button Text="Excluir" Clicked="Button_Clicked_1" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>