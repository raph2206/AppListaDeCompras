<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMercadin.MainPage"
             Padding="5">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Listagem" Clicked="ToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>

    <StackLayout>

        <Label Text="Produto" />
        <Entry x:Name="txt_produto" />

        <Label Text="Preço" />
        <Entry x:Name="txt_preco" />

        <Label Text="Data de Criação" />
        <DatePicker x:Name="dtpck_data_criacao" />

        <Button Text="Salvar" TextColor="White" BackgroundColor="Black" Clicked="Button_Clicked" />

    </StackLayout>

</ContentPage>
