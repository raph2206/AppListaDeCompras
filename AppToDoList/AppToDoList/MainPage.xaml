<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppToDoList.MainPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Listagem" Clicked="ToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>

    <StackLayout>
        <Label Text="Nome" />
        <Entry x:Name="txt_nome" />

        <Label Text="Preco" />
        <Entry x:Name="txt_preco" />

        <Label Text="Data Criação" />
        <DatePicker x:Name="dtpck_data_criacao" />

        <Button Text="Salvar" Clicked="Button_Clicked" />

        <!-- <Button Text="Listagem" Clicked="ToolbarItem_Clicked" /> -->

    </StackLayout>

</ContentPage>
